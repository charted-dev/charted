load("@ash2k_bazel_tools//golangcilint:def.bzl", "golangcilint")
load("@bazel_gazelle//:def.bzl", "gazelle")

exports_files([
    # Allows the `//services/search-indexer:golangci` target to access
    # this file.
    ".golangci.yml",

    # Allows `bazel build //cmd/search-indexer:bin` to read this file
    # and uses it as the version of the binary.
    ".indexer-version",
])

# gazelle:prefix charts.noelware.org/search-indexer
gazelle(name = "gazelle")

gazelle(
    name = "update-repos",
    args = [
        "-from_file=go.mod",
        "-to_macro=deps.bzl%go_dependencies",
        "-prune",
    ],
    command = "update-repos",
)

# Binds //:bin -> //cmd/search-indexer:bin for easy building and
# running locally.
alias(
    name = "binary",
    actual = "//services/search-indexer/cmd/search-indexer:binary",
    visibility = ["//visibility:public"],
)

golangcilint(
    name = "lint",
    config = "//:.golangci.yml",
    paths = [
        ".",
        "cmd/...",
        "pkg/...",
    ],
    prefix = "charts.noelware.org/search-indexer",
)

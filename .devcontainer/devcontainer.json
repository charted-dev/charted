{
  "name": "charted-server",
  "remoteUser": "vscode",
  "dockerFile": "Dockerfile",
  "workspaceFolder": "/workspace",
  "forwardPorts": [80, 443],
  "postCreateCommand": ". ./.devcontainer/scripts/bootstrap-cassandra.sh",
  "settings": {
    "java.jdt.ls.java.home": "/opt/java/jdk-18.0.1+10",
    "terminal.integrated.defaultProfile.linux": "zsh"
  },
  "extensions": [
    "eamodio.gitlens",
    "ms-azuretools.vscode-docker",
    "redhat.java",
    "fwcd.kotlin",
    "vscjava.vscode-gradle"
  ]
}

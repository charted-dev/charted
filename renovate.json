{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabled": true,
    "automerge": true,
    "extends": ["config:base", "default:timezone(America/Los_Angeles)", "docker:disableMajor"],
    "vulnerabilityAlerts": {
        "labels": ["security"]
    },
    "packageRules": [
        {
            "matchPackagePatterns": ["*"],
            "postUpgradeTasks": {
                "commands": ["./dev sync-deps"]
            }
        }
    ]
}

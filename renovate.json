{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabled": true,
    "automerge": true,
    "extends": ["config:base", "default:timezone(America/Los_Angeles)", "docker:disableMajor"],
    "vulnerabilityAlerts": {
        "labels": ["security"]
    },
    "postUpgradeTasks": {
        "executionMode": "update",
        "fileFilters": ["**/Cargo.toml"],
        "commands": [
            "./dev sync-deps"
        ]
    }
}

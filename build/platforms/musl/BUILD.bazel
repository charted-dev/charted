load("@rules_cc//cc:defs.bzl", "cc_toolchain")
load(":toolchain.bzl", "define_musl_toolchain")

package(default_visibility = ["//visibility:public"])

filegroup(name = "empty")

define_musl_toolchain(
    name = "linux_musl_cc_toolchain_config",
)

cc_toolchain(
    name = "linux_musl_cc_toolchain",
    all_files = ":empty",
    compiler_files = ":empty",
    dwp_files = ":empty",
    linker_files = ":empty",
    objcopy_files = ":empty",
    strip_files = ":empty",
    supports_param_files = 0,
    toolchain_config = "linux_musl_cc_toolchain_config",
)

toolchain(
    name = "linux_musl_toolchain",
    exec_compatible_with = [
        "@platforms//cpu:x86_64",
        "@platforms//os:linux",
    ],
    target_compatible_with = [
        "//build/platforms/abi:musl",
        "@platforms//cpu:x86_64",
        "@platforms//os:linux",
    ],
    toolchain = ":linux_musl_cc_toolchain",
    toolchain_type = "@bazel_tools//tools/cpp:toolchain_type",
)

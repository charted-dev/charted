echo "[::charted-server] Checking Spotless..."

if [[ ! -z "${SPOTLESS_SKIP:-}" ]]; then
  echo "[::charted-server] Skipping checks!"
  exit 0
fi

./gradlew spotlessCheck
if [[ "$?" != "0" ]]; then
  echo "[::charted-server] Run \`make spotless\` and commit again."
  exit $?
fi

./gradlew :build-tools:spotlessCheck
if [[ "$?" != "0" ]]; then
  echo "[::charted-server] Run \`make spotless\` and commit again."
  exit $?
fi

echo "[::charted-server] üëç Everything seems ok!"

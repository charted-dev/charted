load("@rules_pkg//pkg:mappings.bzl", "pkg_files")
load("@rules_pkg//pkg:tar.bzl", "pkg_tar")
load("@rules_pkg//pkg:zip.bzl", "pkg_zip")

pkg_files(
    name = "binary",
    srcs = ["//tools/helm-plugin"],
    prefix = "bin",
    renames = {
        "//tools/helm-plugin": "charted-helm-plugin",
    },
)

pkg_files(
    name = "scripts",
    srcs = ["//tools/helm-plugin/scripts:update.sh"],
    prefix = "scripts",
)

pkg_tar(
    name = "tarball",
    srcs = [
        "//tools/helm-plugin:plugin.yaml",
        "//tools/helm-plugin/distribution:binary",
        "//tools/helm-plugin/distribution:scripts",
    ],
    extension = "tgz",
)

pkg_zip(
    name = "zip",
    srcs = [
        "//tools/helm-plugin:plugin.yaml",
        "//tools/helm-plugin/distribution:binary",
        "//tools/helm-plugin/distribution:scripts",
    ],
)

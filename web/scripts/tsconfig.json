{
  "extends": "@augu/tsconfig",
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "module": "CommonJS",
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}

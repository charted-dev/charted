{
  "extends": "@augu/tsconfig/dom.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "module": "ESNext",
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}

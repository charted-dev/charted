{
  "extends": "@augu/tsconfig",
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "module": "CommonJS",
    "jsx": "preserve",
    "typeRoots": ["../node_modules/@types", "./@types"],
    "baseUrl": ".",
    "noEmit": true // esbuild will output it instead of `tsc`.
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules"]
}

{
  "extends": "@augu/tsconfig/dom.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "module": "CommonJS",
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "baseUrl": ".",
    "noEmit": true,
    "incremental": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
